@model Nibo.App.ViewModel.BankStatementViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BankStatementViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div class="form-group">
                <label class="control-label">Upload</label>


                <div class="form-group">
                    <label asp-for="FileUpload" class="control-label"></label>

                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="FileUpload" asp-for="FileUpload">
                        <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="FileUpload"></label>
                        <label style="display: none" id="img_nome"></label>
                    </div>

                </div>


            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <strong>@ViewData["Message"]</strong>
                <strong>@ViewData["erro"]</strong>
            </div>
        </form>

        <form enctype="multipart/form-data" asp-action="Index">
            <div class="form-group">
                <label class="control-label">Visualizar Registros</label>

            </div>
            <div class="form-group">
                <input type="submit" value="Visualizar" class="btn btn-primary" />
            </div>
        </form>
        
        <form enctype="multipart/form-data" asp-action="RemoveRecords">
            <div class="form-group">
                <label class="control-label">Delete all Records</label>
            </div>
            <div class="form-group">
                <input type="submit" value="delete all records " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#FileUpload").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';
        });

        $("#FileUpload").attr("data-val", "true");
        $("#FileUpload").attr("data-val-required", "Preencha o campo Imagem");
    </script>
}

